{
  "id": "host-controller",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "host-controller",
      "containers": [
        {
          "name": "host-controller",
          "image": "hpehl/wildfly-kubernetes",
          "ports": [
            {
              "containerPort": 9990,
              "hostPort": 9990
            }
          ],
          "env": [
            {
              "name": "WILDFLY_MANAGEMENT_USER",
              "value": "admin"
            },
            {
              "name": "WILDFLY_MANAGEMENT_PASSWORD",
              "value": "password123"
            },
            {
              "name" : "SERVER_GROUP",
              "value": "main-server-group"
            }
          ],
          "command": [
            "--domain-config", "domain.xml",
            "--host-config", "host-slave.xml",
            "-b", "0.0.0.0",
            "-bmanagement", "0.0.0.0"
          ]
        }
      ]
    }
  },
  "labels": {
    "controller-type": "host"
  }
}

